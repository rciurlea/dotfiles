{{- end }}

[env]
TERM = "xterm-256color"

[font]
size = 14.0
offset = { y = 6 }
glyph_offset = { y = 3 }

[font.normal]
family = "Input Mono"
style = "Light"

[font.bold]
family = "Input Mono"
style = "Medium"

[hints]
alphabet = "jfkdls;ahgurieowpq"

{{- if or (eq .chezmoi.hostname "trogdor") (eq .chezmoi.hostname "strongbad") }}

[shell]
